<script type="text/javascript">


function handleSubmit()
{
	var form = _gel("moduleForm"),
	    elm = _gel("allQuery");
	if (elm != "") {
		var query = _trim(elm.value);
		var searchUrl ='https://sites.google.com/site/freefinanceresearch/system/app/pages/customSearch?scope=cse-goog_1459377513&q=';
		var checkCommand = _trim(query).split(":")[0].toLowerCase();


		var urls = ['define|http://sites.google.com/site/investingharbour/system/app/pages/customSearch?scope=cse-goog_24153137&q=',
		    'timeless|http://sites.google.com/site/investingharbour/system/app/pages/customSearch?scope=cse-goog_24153138&q=',
		    'edgar|http://www.sec.gov/cgi-bin/browse-edgar?company=&match=&filenum=&State=&Country=&SIC=&owner=exclude&Find=Find+Companies&action=getcompany&CIK=',
